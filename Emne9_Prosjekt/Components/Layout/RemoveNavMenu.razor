@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div style="z-index: 1000;
            padding-top: 20px">
    <a class="selection-style"
             style="z-index: 1000;
                    padding-left: 25px;
                    padding-top: 25px;
                    opacity: 0.5">
        <img style="width: 60px; "
             alt=""
             src="@_icon"
             @onmouseover="MouseOn"
             @onmouseout="MouseOff"
             @onclick="DisplayMessage"/>
        <div class="text-adjustment"
             @onclick="DisplayMessage">
            Quit
        </div>
    </a>
    @if (_message)
    {
        <div style="border: 1px solid white;
                    width: 490px;
                    background: rgb(0, 0, 0, 0.5);">
            <div class="text-adjustment"
                 style="padding-top: 35px">
                You will receive a loss if you quit in the middle of a game.
            </div>
            <div class="text-adjustment">
                Are you sure you want to quit?
            </div>
            <div class="text-adjustment"
                 style="padding-bottom: 35px;
                        text-align: right;
                        padding-right: 50px">
                <a class="selection-style"
                   style="font-size: x-large"
                   @onclick="ForceReload">Yes</a>
                <a style="color: white;
                          font-size: x-large"> / </a>
                <a class="selection-style"
                   style="font-size: x-large"
                   @onclick="DisplayMessage">No</a>
            </div>
        </div>
    }
</div>

<style>
    .selection-style {
        color: white;
        cursor: pointer;
        font-weight: bolder;
        text-decoration: none;
    }
    .selection-style:hover {
        color: white;
    }
    
    .text-adjustment {
        color: white;
        padding-left: 38px
    }
</style>

@code
{
    private string _icon = "/Assets/logo/BWLogo.png";
    private bool _message = false;
    
    private void MouseOn()
    {
        _icon = "/Assets/logo/ColorLogo.png";
    }

    private void MouseOff()
    {
        _icon = "/Assets/logo/BWLogo.png";
    }

    private void DisplayMessage()
    {
        _message = !_message;
    }
    
    private void ForceReload()
    {
        Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
    }
}
