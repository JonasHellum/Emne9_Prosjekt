                {
                    <h5 style="text-align: center;
                               text-decoration: underline;
                               font-family: Bahnschrift,serif;">
                        Local
                    </h5>
                    <EditForm Model="@registrationDto" OnValidSubmit="RegistrationAsync" FormName="registerForm">
