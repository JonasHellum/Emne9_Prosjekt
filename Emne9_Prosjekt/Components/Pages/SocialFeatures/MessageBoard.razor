@page "/MessageBoard"
@using Emne9_Prosjekt.Components.Pages.FrontPage

<div data-aos="zoom"></div>

<div style="background: #ffffff;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            font-family: Bahnschrift,serif;
            font-weight: bolder;
            padding-top: 200px;"
     class="page-element">
    <h1 data-aos="zoom-out-up"
        data-aos-duration="500"
        data-aos-delay="300">
        Welcome to the Message Board!
    </h1>
    
    <h2 data-aos="zoom-out-up"
        data-aos-duration="500"
        data-aos-delay="600">
        Start your own thread or join in on an existing one
    </h2>
    
    <div style="transform: translateX(360px) translateY(-170px) rotate(30deg);
                margin: 0 auto;
                width: 200px;
                height: 150px;
                opacity: 0.3">
        <div data-aos="zoom-out"
             data-aos-delay="1000"
             style="border: 15px solid red;
                    border-radius: 10px;
                    font-size: x-large;
                    text-align: center;
                    color: red">
            Still in Development!
        </div>
    </div>
</div>

<div style="background: #D45500"
     class="page-element">
    <MessageBoardData/>
</div>

<div style="background: #ffffff"
     class="page-element">
    <Credit/>
</div>

<style>
    .page-element {
        width: 1000px;
        margin: 0 auto;
        display: flex;
    }
</style>

