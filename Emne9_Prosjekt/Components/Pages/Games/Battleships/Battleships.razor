    public async Task CheckGameOver()
    {
        if (_gameState == GameState.GameOver)
            return;
        
    // Check if all my ships are sunk
        bool allMyShipsSunk = GameComponents.GetPlacedShips()
            .All(ship => ship.Value.All(pos => _playerBoard.TryGetValue(pos, out var v) && v < 0));
        //if all my ships are sunk, I've lost - my opponent has won
        if (allMyShipsSunk)
        {
            _gameState = GameState.GameOver;
            _isWinner = false;
            _gameOverMessage = "Your opponent demolished your fleet";
            await GameHubConnection.SendGameOverAsync(true);  // Motstanderen vant
            await InvokeAsync(StateHasChanged);
        }
        // Check if opponent's ships are all sunk
        else if (_opponentShipStatus.Values.All(sunk => sunk) && _opponentShipStatus.Count > 0)
        {
            _gameState = GameState.GameOver;
            _isWinner = true;
            _gameOverMessage = "You obliterated your opponents fleet";
            
            await GameHubConnection.SendGameOverAsync(false); // Motstanderen tapte
            await InvokeAsync(StateHasChanged);
        }
    }
    
